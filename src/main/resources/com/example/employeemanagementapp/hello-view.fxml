         <Label text="Employee id" />
         <TextField fx:id="employeeid" prefHeight="26.0" prefWidth="330.0" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="first name" />
         <TextField fx:id="first_name" prefHeight="26.0" prefWidth="330.0" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="Last name" />
         <TextField fx:id="last_name" prefHeight="26.0" prefWidth="330.0" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="email" />
         <TextField fx:id="email" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="phone" />
         <TextField fx:id="phone" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="Position" />
         <TextField fx:id="position" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="Salary" />
         <TextField fx:id="salary" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="Hire date" />
         <DatePicker fx:id="hire_date" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="Department id" />
         <TextField fx:id="department_id" />
      </children>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="288.0">
      <children>
         <Label text="Manager id" />
         <TextField fx:id="manager_id" />
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="ProjectButton" mnemonicParsing="false" text="Project" />
         <Button fx:id="DepartmentsButton" mnemonicParsing="false" text="Department" />
         <Button fx:id="AttendanceButton" mnemonicParsing="false" onAction="#onAttendanceButtonClick" text="Attendance" />
         <Button mnemonicParsing="false" onAction="#onUpdateButtonClick" text="update" />
        <Button onAction="#onHelloButtonClick" text="Add" />
         <Button layoutX="252.0" layoutY="10.0" mnemonicParsing="false" onAction="#onListAllButtonClick" text="list" />
         <Button layoutX="357.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="delete" />
      </children>
