<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.employeemanagementapp.AttendanceController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50;">
            <Label text="Navigation" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button fx:id="ProjectButton" text="Project" styleClass="action-button"/>
            <Button fx:id="DepartmentsButton" text="Department" styleClass="action-button"/>
            <Button fx:id="EmployeeButton" text="Employee" onAction="#onEmployeeButtonClick" styleClass="action-button"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <StackPane fx:id="contentArea">
            <VBox alignment="TOP_CENTER" spacing="15" prefWidth="600" styleClass="form-container">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>

                <Label text="Attendance Form" styleClass="form-title"/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints minWidth="300"/>
                    </columnConstraints>

                    <Label text="Attendance ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="attendanceid" promptText="Enter attendance ID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Employee ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="employeeid" promptText="Enter employee ID" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Attendance Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="attendancedate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Check In:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="checkin" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Check Out:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="checkout" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="status" promptText="Enter status" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Notes:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="notes" promptText="Enter notes" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER" styleClass="button-bar">
                    <Button text="Update" onAction="#onUpdateButtonClick" styleClass="action-button"/>
                    <Button text="Add" onAction="#onHelloButtonClick" styleClass="action-button"/>
                    <Button text="List" onAction="#onListAllButtonClick" styleClass="action-button"/>
                    <Button text="Delete" onAction="#onDeleteButtonClick" styleClass="action-button"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
