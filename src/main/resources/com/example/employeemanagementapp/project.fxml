<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeemanagementapp.ProjectController">
   <children>
      <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="526.0" prefWidth="543.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox layoutX="30.0" layoutY="30.0" prefHeight="30.0" prefWidth="288.0">
               <children>
                  <Label text="Project id" />
                  <TextField fx:id="projectid" prefHeight="26.0" prefWidth="330.0" />
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="288.0">
               <children>
                  <Label text="Project name" />
                  <TextField fx:id="projectname" prefHeight="26.0" prefWidth="330.0" />
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="288.0">
               <children>
                  <Label text="Descripion" />
                  <TextField fx:id="description" />
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="288.0">
               <children>
                  <Label text="Start date" />
                  <DatePicker fx:id="startdate" />
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="288.0">
               <children>
                  <Label text="End date" />
                  <DatePicker fx:id="enddate" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="ProjectButton" mnemonicParsing="false" onAction="#onAttendanceButtonClick" text="Attendance" />
                  <Button fx:id="DepartmentsButton" mnemonicParsing="false" text="Department" />
                  <Button fx:id="EmployeeButton" mnemonicParsing="false" onAction="#onEmployeeButtonClick" text="Employee" />
                  <Button mnemonicParsing="false" onAction="#onUpdateButtonClick" text="update" />
                  <Button onAction="#onHelloButtonClick" text="Add" />
                  <Button layoutX="252.0" layoutY="10.0" mnemonicParsing="false" onAction="#onListAllButtonClick" text="list" />
                  <Button layoutX="357.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="delete" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
