<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.employeemanagementapp.ProjectController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50;">
            <Label text="Navigation" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button fx:id="ProjectButton" text="Project" styleClass="action-button"/>
            <Button fx:id="DepartmentsButton" text="Department" styleClass="action-button"/>
            <Button fx:id="EmployeeButton" text="Employee" onAction="#onEmployeeButtonClick" styleClass="action-button"/>
            <Button fx:id="AttendanceButton" text="Attendance" onAction="#onAttendanceButtonClick" styleClass="action-button"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <StackPane fx:id="contentArea">
            <VBox alignment="TOP_CENTER" spacing="15" prefWidth="600" styleClass="form-container">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>

                <Label text="Project Registration" styleClass="form-title"/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                        <ColumnConstraints minWidth="300"/>
                    </columnConstraints>

                    <Label text="Project ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="projectid" promptText="Enter project ID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Project Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="projectname" promptText="Enter project name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="description" promptText="Enter description" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Start Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="startdate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="End Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="enddate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER" styleClass="button-bar">
                    <Button text="Update" onAction="#onUpdateButtonClick" styleClass="action-button"/>
                    <Button text="Add" onAction="#onHelloButtonClick" styleClass="action-button"/>
                    <Button text="List" onAction="#onListAllButtonClick" styleClass="action-button"/>
                    <Button text="Delete" onAction="#onDeleteButtonClick" styleClass="action-button"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
